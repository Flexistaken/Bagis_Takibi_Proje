<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bagis_takibi_proje.KurumFormController"
      stylesheets="@style.css"
      styleClass="panel-gradient"
      alignment="CENTER"
      prefWidth="420">

    <!-- DIŞ PADDING (GRADIENT ALAN) -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- BEYAZ KART -->
    <VBox spacing="25"
          alignment="CENTER"
          styleClass="card"
          prefWidth="380">

        <padding>
            <Insets top="35" right="40" bottom="35" left="40"/>
        </padding>

        <!-- BAŞLIK -->
        <VBox spacing="8" alignment="CENTER">
            <Label fx:id="titleLabel"
                   text="Kurum Yönetimi"
                   styleClass="popup-title"/>
            <Label text="Lütfen kurum adını giriniz."
                   style="-fx-text-fill: #95a5a6; -fx-font-size: 13;"/>
        </VBox>

        <Separator opacity="0.3"/>

        <!-- INPUT -->
        <VBox spacing="8">
            <Label text="KURUM ADI"
                   style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 11;"/>
            <TextField fx:id="kurumAdField"
                       promptText="Örn: Türk Kızılayı"
                       styleClass="modern-input"/>
        </VBox>

        <!-- BUTONLAR -->
        <HBox spacing="18" alignment="CENTER">
            <padding>
                <Insets top="10"/>
            </padding>

            <Button text="Vazgeç"
                    onAction="#iptal"
                    styleClass="btn-link"/>

            <Button text="Kaydet"
                    onAction="#kaydet"
                    styleClass="btn-primary"
                    prefWidth="140"/>
        </HBox>

    </VBox>
</VBox>
