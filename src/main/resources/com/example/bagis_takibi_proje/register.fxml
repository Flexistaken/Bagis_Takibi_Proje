<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.bagis_takibi_proje.RegisterController"
           stylesheets="@style.css"
           prefWidth="600" prefHeight="550"
           styleClass="login-root"> <VBox alignment="CENTER" spacing="20">

    <VBox spacing="20" alignment="CENTER" maxWidth="400" styleClass="login-card">
        <padding>
            <Insets top="40" right="45" bottom="40" left="45"/>
        </padding>

        <VBox spacing="5" alignment="CENTER">
            <Label text="YENİ HESAP" styleClass="login-title-main"/>
            <Label text="Bağış sistemine katılmak için bilgilerinizi girin" styleClass="login-subtitle"/>
        </VBox>

        <Separator opacity="0.2" />

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="AD SOYAD" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 10;"/>
                <TextField fx:id="adField" promptText="Adınız ve Soyadınız" styleClass="modern-input"/>
            </VBox>

            <VBox spacing="5">
                <Label text="E-MAİL" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 10;"/>
                <TextField fx:id="emailField" promptText="örnek@mail.com" styleClass="modern-input"/>
            </VBox>

            <VBox spacing="5">
                <Label text="ŞİFRE" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 10;"/>
                <PasswordField fx:id="sifreField" promptText="••••••••" styleClass="modern-input"/>
            </VBox>
        </VBox>

        <VBox spacing="15" fillWidth="true">
            <Button text="Kaydı Tamamla"
                    onAction="#kayitOl"
                    styleClass="btn-primary"
                    maxWidth="Infinity"/>

            <Label fx:id="mesajLabel" styleClass="error-message" wrapText="true" alignment="CENTER"/>
        </VBox>

    </VBox>

</VBox>

</StackPane>