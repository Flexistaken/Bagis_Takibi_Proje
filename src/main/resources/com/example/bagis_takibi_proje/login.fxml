<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="400" prefHeight="300"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bagis_takibi_proje.LoginController">

    <VBox spacing="12" alignment="CENTER"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <Label text="Bağış Takip Sistemi"
               style="-fx-font-size:18px; -fx-font-weight:bold;"/>

        <TextField fx:id="emailField" promptText="Email"/>

        <PasswordField fx:id="sifreField" promptText="Şifre"/>

        <Button text="Giriş Yap" onAction="#handleLogin"/>

        <Label fx:id="hataLabel"
               style="-fx-text-fill:red;"/>
    </VBox>
</AnchorPane>
