<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.bagis_takibi_proje.LoginController"
           stylesheets="@style.css"
           prefWidth="600" prefHeight="450"
           styleClass="login-root">

    <VBox alignment="CENTER" spacing="20">

        <VBox spacing="20" alignment="CENTER" maxWidth="350" maxHeight="400" styleClass="login-card">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="BAĞIŞ TAKİP" styleClass="login-title-main"/>
            <Label text="Lütfen bilgilerinizi giriniz" styleClass="login-subtitle"/>

            <VBox spacing="10">
                <TextField fx:id="emailField" promptText="E-mail" styleClass="modern-input"/>
                <PasswordField fx:id="sifreField" promptText="Şifre" styleClass="modern-input"/>
            </VBox>

            <VBox spacing="12" fillWidth="true">
                <Button text="Giriş Yap" onAction="#handleLogin" styleClass="btn-primary" maxWidth="Infinity"/>
                <Button text="Hesabın yok mu? Kayıt Ol" onAction="#kayitEkraniAc" styleClass="btn-link" maxWidth="Infinity"/>
            </VBox>

            <Label fx:id="hataLabel" styleClass="error-message"/>
        </VBox>

    </VBox>

</StackPane>